<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col">
        <h2>Para agregar una novedad</h2>
    <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="titulo" name="titulo">
      </div>
      <div class="mb-3">
        <textarea type="text" class="form-control" placeholder="subtitulo" rows="5" name="subtitulo"></textarea>
      </div>
      <div class="mb-3">
        <label>Imagen<input type="file" class="form-control" placeholder="Imagen" name="imagen"></label>
      </div>
      <div class="mb-3">
        <textarea type="text" class="form-control" placeholder="cuerpo" rows="10" name="cuerpo"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Grabar</button>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
   </div>
  </div>
</div>